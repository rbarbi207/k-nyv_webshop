        <Rectangle HorizontalAlignment="Left" Height="405" Grid.Row="1" VerticalAlignment="Top" Width="290" Fill="#E6E6E6" Grid.RowSpan="6" Margin="12,25,0,0" RadiusX="10" RadiusY="10"/>
        <Rectangle HorizontalAlignment="Left" Height="69" Grid.Row="7" VerticalAlignment="Bottom" Width="290" Fill="#E6E6E6" Margin="12,10,0,0" RadiusX="10" RadiusY="10"/>

        <!--searchbar, stílus: image, rectangle -->
        <Rectangle Name="rectangle" HorizontalAlignment="Left" Height="33" Margin="27,6,0,0" Grid.Row="2" VerticalAlignment="Top" Width="222" Fill="White" RadiusX="10" RadiusY="10"/>
        <Image Name="img_sort"  HorizontalAlignment="Left" Cursor="Hand" Height="24" Margin="260,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="24" Source="D:\suli\2025-2026\projektek\k-nyv_webshop\reni-commitok\edited-wpf-11-20\konyv_wpf\sorticon.png" MouseEnter="Image_MouseEnter" MouseLeave="img_sort_MouseLeave" MouseDown="img_sort_MouseDown"/>




    </Grid>
</Window>
