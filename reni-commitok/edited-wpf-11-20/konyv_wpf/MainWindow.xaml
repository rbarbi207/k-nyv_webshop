            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--hr: stílus, h1: stílus-->
        <Label  Content="Könyv Nyilvántartás" HorizontalAlignment="Left" Margin="7,2,0,0" VerticalAlignment="Top" Grid.Column="0" Grid.Row="0" Foreground="#0B0B2F" Opacity="0.63" FontWeight="Bold" FontSize="20" FontFamily="Arial" />
        <Rectangle Fill="#FF5F3463" Height="5" Grid.ColumnSpan="2" VerticalAlignment="Bottom" StrokeThickness="2" RenderTransformOrigin="0.5,0.5" RadiusY="3" RadiusX="3" Margin="1,0,-3,0"/>

        <!--lbl_lang: stílus-->
        <Image Grid.Column="1" HorizontalAlignment="Right" Height="25" Margin="288,4,0,0"  VerticalAlignment="Top" Width="40" Source="D:\suli\2025-2026\projektek\k-nyv_webshop\reni-commitok\edited-wpf-11-20\konyv_wpf\language icon.png"/>
