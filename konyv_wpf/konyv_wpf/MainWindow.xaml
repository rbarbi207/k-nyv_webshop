<Window x:Class="konyv_webshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:konyv_webshop"
        mc:Ignorable="d"
        SizeChanged="Window_SizeChanged"
        Name="window"
        Title="MainWindow" Height="710" Width="858">
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>

    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF49466D" Offset="0"/>
            <GradientStop Color="#FFBBBBBB" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20,20,10,0" x:Name="windowGrid" MaxHeight="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualHeight}">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <!--hr: stílus, h1: stílus-->
        <Label Name="h1"  Content="Könyv Nyilvántartás" Foreground="White" HorizontalAlignment="Left" Margin="7,-10,0,0" VerticalAlignment="Top" Grid.Column="0" Opacity="0.63" FontWeight="Bold" FontSize="20" FontFamily="Arial" />
        <!--<Rectangle Fill="#FF5F3463" Height="5" Grid.ColumnSpan="3" VerticalAlignment="Bottom" StrokeThickness="2" RenderTransformOrigin="0.5,0.5" RadiusY="3" RadiusX="3" Margin="1,0,-3,0"/>-->

        <!--lbl_lang: stílus-->
        <TextBlock x:Name="book" Text="📖" HorizontalAlignment="Center" Margin="0,-15,0,0" Grid.ColumnSpan="3" Foreground="White" Panel.ZIndex="10" FontSize="30"/>
        <Grid HorizontalAlignment="Right" Grid.Column="2" x:Name="language">
            <TextBlock Text="🌐" Margin="0,-10,0,10" Foreground="White" FontSize="20"></TextBlock>
            <Label Name="lbl_lang" Cursor="Hand" Content="Magyar" Foreground="White" Margin="25,-10,10,0" RenderTransformOrigin="0.296,0.046" Background="{x:Null}" Opacity="0.6" FontSize="18" FontFamily="Arial" FontWeight="Bold" MouseEnter="Label_MouseEnter" MouseLeave="lbl_lang_MouseLeave" MouseDown="lbl_lang_MouseDown"/>
        </Grid>


        <Grid x:Name="contentArea" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,0">
            <TextBox FocusVisualStyle="{x:Null}" x:Name="tbx_searchbar" FontSize="16" 
                     Padding="0,0,0,0" Margin="60,18,120,0" HorizontalAlignment="Left" 
                     VerticalAlignment="Top" TextWrapping="NoWrap" MaxLines="1" Height="33" 
                     Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" 
                     Foreground="#FF2D272B" SelectionTextBrush="{x:Null}" BorderThickness="0,0,0,0" 
                     KeyDown="tbx_searchbar_KeyDown" Panel.ZIndex="50" TextChanged="tbx_searchbar_TextChanged" GotKeyboardFocus="tbx_searchbar_GotKeyboardFocus"  Width="180"/>
            <Rectangle Name="rct_list"  Height="auto" IsHitTestVisible="False" Fill="#FFC1BCC8" Margin="0,0,0,0" RadiusX="10" RadiusY="10"/>
            <TextBlock Text="🔎" Margin="25,13,0,0" IsHitTestVisible="False" Panel.ZIndex="10" FontSize="22"/>
            <!--searchbar, stílus: image, rectangle-->
            <Rectangle x:Name="rectangle" Margin="20,10,0,0" IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Top" Height="38" Width="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth}" Fill="White" RadiusX="10" RadiusY="10"/>
            <!--<Image Name="img_sort"  HorizontalAlignment="Left" IsHitTestVisible="False" Cursor="Hand" Height="27" Margin="280,15,0,0" Grid.Row="1" VerticalAlignment="Top" Width="43"  MouseEnter="Image_MouseEnter" MouseLeave="img_sort_MouseLeave" MouseDown="img_sort_MouseDown" Grid.RowSpan="2"/>-->
            <TextBlock Text="⇅" Name="img_sort" FontSize="45"  Foreground="White" HorizontalAlignment="Left"  Cursor="Hand" Height="82" Margin="330,-6,0,0" VerticalAlignment="Top" Width="70"  MouseEnter="Image_MouseEnter" MouseLeave="img_sort_MouseLeave" MouseDown="img_sort_MouseDown" />
            <Border CornerRadius="10" BorderBrush="White" BorderThickness="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="White" Padding="2" Margin="20,60,20,20" Height="auto">
                <ListBox x:Name="lbx_books" Padding="10" BorderBrush="{x:Null}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"  
                         VerticalAlignment="Stretch" MinHeight="250"
                         Margin="7,7,-3,0" SelectionChanged="lbx_books_SelectionChanged">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" >
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#1d152e"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                        <Border x:Name="Bd"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="10"
                                        Padding="{TemplateBinding Padding}"
                                        BorderThickness="1"        >
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#FFEDEDED"/>
                                                <Setter Property="Foreground" Value="#FF827690"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#FFA190BF"/>
                                                <Setter Property="Foreground" Value="#FF32253C"/>
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FFA190BF"/>
                                                <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                                                <Setter TargetName="Bd" Property="CornerRadius" Value="10"/>

                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>
        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="rightPanelRoot" Grid.Column="2" Grid.Row="1" Margin="0,10,0,0">
            <StackPanel x:Name="panelRight" Margin="0,0,10,0">
                <Grid>
                    <!--titlesearch-->
                    <Rectangle Name="rct_title" Height="33" Fill="White" RadiusX="10" RadiusY="10"/>
                    <Label Content="Cím:" Margin="10,5,0,0"/>
                    <TextBox Name="txtTitle" Text="" TextChanged="txtTitle_TextChanged" Margin="45,0,10,0" BorderBrush="White" Background="White" VerticalAlignment="Center"/>
                </Grid>

                <Grid Margin="0,18,0,0">
                    <!--authorsearch-->
                    <Rectangle Name="rct_author" Height="33" Fill="White" RadiusX="10" RadiusY="10"/>
                    <Label  Content="Szerző:" Margin="10,5,0,0"/>
                    <TextBox Name="txtAuthor" Text="" VerticalAlignment="Top" Margin="55,9,10,0" TextChanged="txtAuthor_TextChanged" BorderBrush="White" Background="White"/>
                </Grid>

                <Grid Margin="0,18,0,0">
                    <!--genresearch-->
                    <Rectangle Name="rct_genre" Height="80" Fill="White" RadiusX="10" RadiusY="10"/>
                    <Label Content="Műfaj:" Margin="10,5,0,0"/>
                    <ComboBox Name="cmbGenre" Margin="60,-43,10,0" Height="25" SelectionChanged="cmbGenre_SelectionChanged" Foreground="Black"/>
                    <Label Content="Új Műfaj:" Margin="10,45,10,0"/>
                    <TextBox Name="txtGenre" Margin="75,40,10,0" Height="20" TextWrapping="Wrap" Text="" BorderBrush="White" TextChanged="txtGenre_TextChanged" Background="White"/>
                </Grid>

                <Grid Margin="0,18,0,0">
                    <!--publishersearch-->
                    <Rectangle Name="rct_publisher" Height="35" Fill="White" RadiusX="10" RadiusY="10"/>
                    <Label Content="Kiadó:" Margin="10,5,0,0"/>
                    <TextBox Name="txtPublisher" Margin="50,2,10,0" Height="20" TextWrapping="Wrap" Text="" BorderBrush="White" TextChanged="txtPublisher_TextChanged" Background="White"/>
                </Grid>

                <Grid Margin="0,18,0,0">
                    <!--ebook/paperSearch-->
                    <Rectangle Name="rct_ebook" Height="33" Fill="White" RadiusX="10" RadiusY="10"/>
                    <RadioButton Name="rad_ebook" HorizontalAlignment="Left" Margin="20,10,0,0" Content="Ebook" Background="#FFCCA5E8" Checked="rad_ebook_Checked"/>
                    <RadioButton Name="rad_paper" HorizontalAlignment="Right" Margin="0,10,20,0" Content="Papír alapú" Background="#FFCCA5E8" Checked="rad_paper_Checked"/>
                </Grid>
                <Grid Margin="0,18,0,0">
                    <!--DateSearch-->
                    <Rectangle Name="rct_Date" Height="33" Fill="White" RadiusX="10" RadiusY="10"/>
                    <Label Content="Megj. Dátum:" Height="33" Margin="10,5,0,0"/>
                    <DatePicker Name="dpDate" Height="25" Margin="90,0,10,0" BorderBrush="White" Background="White" SelectedDateChanged="dpDate_SelectedDateChanged"/>
                </Grid>
                <Grid Margin="0,18,0,0">
                    <!--NationalitySearch-->
                    <Rectangle Name="rct_national" Height="33" Fill="White" RadiusX="10" RadiusY="10"/>
                    <Label Content="Nemzetiség:" Height="33" Margin="10,5,0,0"/>
                    <TextBox Name="txtnational" Margin="90,0,10,0" Height="20" TextWrapping="Wrap" Text="" BorderBrush="White" TextChanged="txtNatioal_TextChanged" Background="White"/>
                </Grid>
                <Grid Margin="0,18,0,0">
                    <!--CopySearch-->
                    <Rectangle Name="rct_copy" Height="33" Fill="White" RadiusX="10" RadiusY="10"/>
                    <Label Content="Példányszám:" Height="33" Margin="10,5,0,0"/>
                    <TextBox Name="txtcopy" Margin="100,0,10,0" TextWrapping="Wrap" Height="20" Text="" BorderBrush="White" TextChanged="txtCopy_TextChanged" Background="White"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2" Height="160">
            <!--EroorMsg-->
            <Rectangle Name="rct_error" Margin="10,20,10,20" Fill="#5F3463" RadiusX="10" RadiusY="10"/>
            <Border Name="border_error" BorderBrush="White" BorderThickness="5" CornerRadius="10" Margin="20,30,20,30" >
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,-5,0,-5">
                    <TextBlock Name="errorMsg" HorizontalAlignment="Stretch" TextWrapping="Wrap" Background="White" Text="" Padding="10,10,10,12" Margin="-1,0,0,0" Foreground="#FF24142F" FontSize="15" FontWeight="SemiBold" RenderTransformOrigin="0.5,0.5">

                    </TextBlock>
                </ScrollViewer>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="2">
            <!--Mentés mégse-->
            <Border Name="br_Cancel" Visibility="Hidden"   Style="{StaticResource HoverBorder}"  Cursor="Hand" HorizontalAlignment="Right" Height="45" Margin="0,0,140,20" VerticalAlignment="Bottom" Width="98" Background="#FF49466D" CornerRadius="10" MouseDown="CancelButton_Click">
                <Button Name="cancelButton" Cursor="Hand" Content="Mégse" HorizontalAlignment="Center" Width="89" Margin="0,0,0,0" VerticalAlignment="Center" BorderBrush="#FF49466D" Background="#FF49466D" Foreground="White" FontSize="18" Height="39" Click="CancelButton_Click"/>
            </Border>
            <Border Name="br_Save"  Style="{StaticResource HoverBorder}" Cursor="Hand" HorizontalAlignment="Right" Height="45" Margin="0,0,10,20" VerticalAlignment="Bottom" Width="118" Background="#444455" CornerRadius="10" MouseDown="SaveButton_Click">
                <Button Name="SaveButton" Cursor="Hand" Padding="5"  Content="Mentés" HorizontalAlignment="Center" Width="89" VerticalAlignment="Center" BorderBrush="#444455" Background="#444455"  Foreground="White" FontSize="18"  Click="SaveButton_Click"/>
            </Border>
            <Border Name="br_newBook"  Style="{StaticResource HoverBorder}" Cursor="Hand" HorizontalAlignment="Right" Height="45" Margin="0,0,10,20" VerticalAlignment="Bottom" Width="50" Background="#FF403C40" CornerRadius="10" MouseDown="PlusButton_Click">
                <Button Name="PlusButton" Cursor="Hand"  Content="+" HorizontalAlignment="Center" Width="45" Grid.Row="4" VerticalAlignment="Center" BorderBrush="#FF403C40" Background="#FF403C40" Foreground="White" FontSize="18" FontFamily="Bodoni MT Black" FontWeight="Bold" Height="35" Click="PlusButton_Click"/>
            </Border>
            <Border Name="br_Clear" Style="{StaticResource HoverBorder}" Cursor="Hand" Height="45" HorizontalAlignment="Left" Margin="-12.5,0,0,20" VerticalAlignment="Bottom" Background="#FF49466D" CornerRadius="10" MouseDown="br_Clear_MouseDown">
                <Button Name="ClearButton" Cursor="Hand" Content="Mezők törlése"  HorizontalAlignment="Center" Width="117" VerticalAlignment="Center" BorderBrush="#FF49466D" Background="#FF49466D" Foreground="White" FontSize="18" FontFamily="Arial" FontWeight="Thin" Height="34" Click="br_Clear_MouseDown"/>
            </Border>
            <Border Name="br_Modify"   Style="{StaticResource HoverBorder}" Cursor="Hand"  Height="45"  Margin="111,0,145,20" VerticalAlignment="Bottom" Background="#FF403C40" CornerRadius="10" MouseDown="br_Modify_MouseDown">
                <Button Name="ModifyButton" Cursor="Hand" Content="Módosítás" HorizontalAlignment="Center" Width="90"  VerticalAlignment="Center" BorderBrush="#FF403C40" Background="#FF403C40" Foreground="White" FontSize="18" FontFamily="Arial" FontWeight="Thin" Height="35" Click="br_Modify_MouseDown"/>
            </Border>
            <Border Name="br_Delete"   Style="{StaticResource HoverBorder}" Cursor="Hand" HorizontalAlignment="Right" Height="45" Margin="0,0,65,20" VerticalAlignment="Bottom" Width="75" Background="#FF412258" CornerRadius="10" MouseDown="br_Delete_MouseDown" >
                <Button Name="DeleteButton" Cursor="Hand" Content="Törlés" HorizontalAlignment="Center" Width="66"  VerticalAlignment="Center" BorderBrush="#FF412258" Background="#FF412258" Foreground="White" FontSize="18" FontFamily="Arial" FontWeight="Thin" Height="35" Click="br_Delete_MouseDown"/>
            </Border>
        </Grid>
        <Rectangle Panel.ZIndex="-1" Height="100" Margin="-50,-62,-57,0" Fill="#FF27213E" Stroke="#FF27213E" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
        <Image Source="/images/books.png"/>
    </Grid>
</Window>